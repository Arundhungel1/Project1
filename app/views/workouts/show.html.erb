<main class="index-cover padding-fifty">
  <h1>WORKOUT LIST<%= @workouts %></h1>

  <h3>DATE: <%= @workout.date.strftime("%A, %d %b %Y %l:%M %p").upcase %> </h3>
  <h3>BODY PART: <%= @workout.workout.upcase %> </h3>
  <h3>MOOD: <%= @workout.mood.upcase %> </h3>
  <h3>LENGTH: <%= @workout.length.upcase %> </h3>


  <h2><%= "EXERCISES" %></h2>
  <%= render @workout.exercises %>

  <h3><%= "ADD AN EXERCISE" %></h3>
  <%= render "exercises/form" %>

  <button type="button" class="btn" name="button"><%= link_to "Back", workouts_path %></button>
  |
  <button type="button" class="btn" name="button"><%= link_to "Edit", edit_workout_path(@workout) %></button>
  |
  <button type="button" class="btn" name="button"><%= link_to "Delete", workout_path(@workout), method: :delete, data: { confirm: "Are you sure?"} %></button>


</main>
